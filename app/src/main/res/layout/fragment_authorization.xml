<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="ua.od.radio.pozitivefm.ui.chat.AuthorizationFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/authorization_type"
            style="@style/type_enter"
            android:text="@string/authorization" />

        <TextView
            android:id="@+id/registration_type"
            style="@style/type_enter"
            android:text="@string/registration" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@drawable/gradient_radio" />

    <LinearLayout
        style="@style/auth_container"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <ImageView
            android:src="@drawable/ic_name"
            style="@style/registration_image" />

        <EditText
            android:id="@+id/login_view"
            style="@style/auth_input"
            android:layout_marginTop="8dp"
            android:hint="@string/login" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/registration_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            style="@style/auth_container"
            android:orientation="horizontal">

            <ImageView
                style="@style/registration_image"
                android:src="@drawable/ic_email_registration" />

            <EditText
                android:id="@+id/email_view"
                style="@style/auth_input"
                android:hint="Введите ваш e-mail"
                android:inputType="textEmailAddress" />
        </LinearLayout>

        <LinearLayout
            style="@style/auth_container"
            android:orientation="horizontal">

            <ImageView
                style="@style/registration_image"
                android:src="@drawable/ic_gender" />

            <Spinner
                android:id="@+id/gender_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/gender_list" />
        </LinearLayout>


        <LinearLayout
            style="@style/auth_container"
            android:orientation="horizontal">

            <ImageView
                style="@style/registration_image"
                android:src="@drawable/ic_birthday" />

            <TextView
                android:id="@+id/date_view"
                style="@style/auth_input"
                android:paddingStart="8dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:hint="дд.мм.гггг"
                android:background="?attr/editTextBackground"
                android:textAppearance="?android:attr/textAppearanceMediumInverse"
                android:textColor="@color/colorGray" />
        </LinearLayout>

        <LinearLayout
            style="@style/auth_container"
            android:orientation="horizontal">

            <ImageView
                style="@style/registration_image"
                android:src="@drawable/ic_same_sex_marriage" />

            <Spinner
                android:id="@+id/state_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/state_list" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        style="@style/auth_container"
        android:orientation="horizontal">

        <ImageView
            style="@style/registration_image"
            android:src="@drawable/ic_password" />

        <EditText
            android:id="@+id/password_view"
            style="@style/auth_input"
            android:hint="@string/password"
            android:inputType="textPassword" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_margin="24dp"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/enter_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="4dp"
            android:background="@drawable/enter_button_blue"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:text="@string/enter"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:textStyle="bold" />
    </LinearLayout>


</LinearLayout>
